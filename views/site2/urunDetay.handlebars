{{> site-nav}}



<div class="container mt-4 mb-3">
<div class="row">
    <div style="text-align: center;" class="col-md-12 col-lg-8 col-xl-8 ">
      <img style="max-height: 300px; text-align: center;" src="{{urundetay.images}}" alt="">
</div>

<div class="col-md-12 col-lg-8 col-xl-4 ">
    <table class="table table-striped">
       
        <tbody>
          <tr>
            <th scope="row">Ürün Adı</th>
            <td>{{urundetay.name}}</td>
          
          </tr>
         
          <tr>
            <th scope="row">Ürün Modeli</th>
            <td>{{urundetay.title}}</td>
           
          </tr>
          <tr>
            <th scope="row">Fiyatı</th>
            <td>{{urundetay.price}}₺</td>
          </tr>
          <tr>
            <th scope="row">Garantisi</th>
            <td>{{urundetay.garanti}}</td>
          </tr>
          <tr>
            <th scope="row">İlan Tarihi</th>
            <td>{{urundetay.date}}</td>
          </tr>
          <tr>
            <th scope="row">Firma</th>
            <td>LGA Sistem</td>
          </tr>
          <tr>
            <th scope="row">İade</th>
            <td>{{urundetay.iade}}</td>
          </tr>
         
        </tbody>
      </table>
</div>
</div>






<div class="row">

    <div class="col-md-12 col-lg-8 col-xl-8 ">
        <table class="table table-striped">
       
            <tbody>
              <tr>
                <th scope="row">{{urundetay.akordion1Title}}</th>
                <th scope="row">{{urundetay.akordion2Title}}</th>
              
              </tr>

            </tbody>
          </table>
    <p><span style="font-weight: bold;">{{urundetay.akordion1Title}}</span>
    {{urundetay.akordion1explanation}}
    </p>
    <br>
    <p><span style="font-weight: bold;">{{urundetay.akordion2Title}}</span>
       {{urundetay.akordion2explanation}}
        </p>

 <p><span style="font-weight: bold;">{{urundetay.akordion3Title}}</span>
       {{urundetay.akordion3explanation}}
        </p>

    </div>

    <div class="col-md-12 col-lg-8 col-xl-4">
        <div class="row d-flex justify-content-center">
            <div class="col-md-12 col-lg-12">
              <div class="card shadow-0 border" style="background-color: #f0f2f5;">
                <div class="card-body p-4">
                  <div class="form-outline mb-4">

                    <form action="/urunler/{{urundetay.id}}" method="POST">
                  
                    <input type="text" name="yorum" id="addANote" class="form-control" placeholder="Type comment..." />
                    <button type="submit" class="form-label p-1 mt-2" for="addANote">Soru Sor</button>
                  </form>

                  </div>
          
                
          
                 
          
               
                           {{!-- ! yorum kutu for start --}}

                
               
{{#each comment}}
                
          
                  <div class="card">
                    <div class="card-body">
                      <p>{{this.username}} {{this.surname}}</p>
          
                      <div class="d-flex justify-content-between">
                        <div class="d-flex flex-row align-items-center">
                          
                          <p class="small mb-0 ms-2">{{this.yorum}}</p>
                        </div>
                        <div class="d-flex flex-row align-items-center">
                          <p class="small text-muted mb-0">{{this.date}}</p>
                          <i class="far fa-thumbs-up ms-2 fa-xs text-black" style="margin-top: -0.16rem;"></i>
                        </div>
                      </div>
                    </div>
                  </div>
{{/each}}

              {{!-- ! yorum kutu for stop --}}

                </div>
              </div>
            </div>
          </div>
    </div>

</div>
</div>

        
    <br>
  








{{> site-footer}}
