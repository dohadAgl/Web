{{#if sessionFlash.message}}
<div class="{{sessionFlash.type}}">{{sessionFlash.message}}</div>
{{/if}}
<div class="loginSayfa">

    <form class="form-signin" action="/users/login" method="POST">
      <img class="mb-4" src="/img/lga-logo-black.png" alt="" width="82" height="82">
      <h1 class="h3 mb-3 font-weight-normal">Lütfen Giriş Yap</h1>
     
      <input type="email" id="inputEmail" name="email" class="form-control" placeholder="Email address" required="" autofocus="">
      <br>
      
      <input type="password" id="inputPassword" name="password" class="form-control" placeholder="Password" >
     <br>
      <button class="btn btn-lg btn-primary btn-block" type="submit">Giriş Yap</button>
      <br>
      <br>
     <p style="text-align: center;" class="small mb-3 pb-lg-2">Hesabınız Yokmu? <a style=" font-weight: 700;"
                  class="text-primary " href="/users/register">Kayıt Ol</a></p>
    </form>
  
</div>

